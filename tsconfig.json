{
	"compilerOptions": {
		"target": "ES2021",
		"module": "nodenext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"rootDir": "src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noEmitOnError": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
