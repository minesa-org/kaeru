{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2020",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"resolveJsonModule": true,
		"strict": true,
		"typeRoots": ["./src/types", "./node_modules/@types"]
	},
	"include": ["src/**/*", "src/types/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
	"ts-node": {
		"esm": true
	}
}
