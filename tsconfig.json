{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2020",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"@types/*": ["@types/*"],
			"@events/*": ["events/*"],
			"@commands/*": ["commands/*"],
			"@handlers/*": ["handlers/*"],
			"@interfaces/*": ["interfaces/*"],
			"@components/*": ["components/*"],
			"@utils/*": ["utils/*"],
			"@config/*": ["config/*"],
			"@models/*": ["models/*"],
			"@database/*": ["database/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"],
	"typeRoots": ["./node_modules/@types", "./src/@types"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
