{
	"name": "kaeru",
	"version": "1.0.0",
	"description": "A modular Discord bot with AI, moderation, and ticketing capabilities.",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"build": "tsc",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"format": "prettier --write .",
		"check": "tsc --noEmit"
	},
	"keywords": [
		"discord",
		"discordjs",
		"bot",
		"moderation",
		"tickets",
		"ai",
		"kaeru"
	],
	"author": "Neodevils",
	"license": "MIT",
	"dependencies": {
		"discord.js": "^14.21.0",
		"dotenv": "^16.6.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.32.0",
		"@types/node": "^20.11.30",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.5.3",
		"prettier": "^3.6.2",
		"tsx": "^4.7.0",
		"typescript": "^5.4.5"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"directories": {
		"test": "tests"
	}
}
